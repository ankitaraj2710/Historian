<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">


    <TextView
        android:id="@+id/welcometextview"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="201dp"
        android:text="Welcome abc,"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilepicturetextview"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:text="Profile Picture"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometextview" />

    <ImageView
        android:id="@+id/imageViewcamera"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@color/yello"
        app:layout_constraintEnd_toStartOf="@+id/profilepicturetextview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometextview"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/firstnametextview"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="32dp"
        android:text="First Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewcamera" />

    <EditText
        android:id="@+id/editTextfirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepicturetextview"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lastnametextview"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:text="Last Name"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstnametextview" />

    <EditText
        android:id="@+id/editTextlastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lastnametextview"
        app:layout_constraintTop_toBottomOf="@+id/editTextfirstname"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/contacttextview"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Contact"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastnametextview" />

    <EditText
        android:id="@+id/editTextcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contacttextview"
        app:layout_constraintTop_toBottomOf="@+id/editTextlastname"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="24dp" />


    <TextView
        android:id="@+id/emailidtextview"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Email ID"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contacttextview" />

    <EditText
        android:id="@+id/editTextemailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextcontact"
        android:layout_marginRight="17dp" />

    <TextView
        android:id="@+id/dobtextview"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="DOB"

        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailidtextview" />

    <ImageButton
        android:id="@+id/imageViewcalendar"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@color/yello"
        app:layout_constraintBottom_toTopOf="@+id/SaveDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dobedittext"
        app:layout_constraintTop_toBottomOf="@+id/editTextemailid"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <EditText
        android:id="@+id/dobedittext"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="122dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/SaveDetail"
        app:layout_constraintStart_toEndOf="@+id/dobtextview"
        app:layout_constraintTop_toBottomOf="@+id/editTextemailid"
        android:hint="       /           /  "
        android:layout_marginLeft="33dp" />

    <Button
        android:id="@+id/SaveDetail"
        android:layout_width="198dp"
        android:layout_height="51dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="32dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="109dp"
        android:layout_marginLeft="104dp"
        android:background="@color/yello"/>

</androidx.constraintlayout.widget.ConstraintLayout>